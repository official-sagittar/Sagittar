{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "debug",
            "inherits": "base",
            "displayName": "Debug Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_SAN": "ON"
            }
        },
        {
            "name": "test",
            "inherits": "base",
            "displayName": "Test Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Test",
                "ENABLE_SAN": "ON"
            }
        },
        {
            "name": "release",
            "inherits": "base",
            "displayName": "Release Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_SAN": "OFF"
            }
        },
        {
            "name": "pgo-generate",
            "inherits": "base",
            "displayName": "PGO Instrumentation Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_SAN": "OFF",
                "ENABLE_PGO_GENERATE": "ON",
                "ENABLE_PGO_USE": "OFF"
            }
        },
        {
            "name": "pgo-use",
            "inherits": "base",
            "displayName": "PGO Optimized Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_SAN": "OFF",
                "ENABLE_PGO_GENERATE": "OFF",
                "ENABLE_PGO_USE": "ON",
                "PGO_PROFDATA_FILE": "${sourceDir}/merged.profdata"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "configurePreset": "debug"
        },
        {
            "name": "build-test",
            "configurePreset": "test"
        },
        {
            "name": "build-release",
            "configurePreset": "release"
        },
        {
            "name": "build-pgo-generate",
            "configurePreset": "pgo-generate"
        },
        {
            "name": "build-pgo-use",
            "configurePreset": "pgo-use"
        }
    ]
}